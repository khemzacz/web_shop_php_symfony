            <link rel="stylesheet" href="{{ asset('css/my.css') }}" />
        {% endblock %}
    </head>
    <body>
    {% block logo %}
        <div class="row">
            <div class="col-lg-3"><a href = "/#/"><img src="{{ asset('images/khemzacz.sklep.pl.png') }}"></a></div>
            <div class="col-lg-7" >
